
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Hocvien
<head>
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>
    @if (ViewBag.SignUpSuccessMessage != null)
    {
        <div class="alert alert-success" role="alert">
            @ViewBag.SignUpSuccessMessage
        </div>
    }
    <div data-aos="fade-up" class="container d-flex justify-content-center align-items-center min-vh-100">
        <!----------------------- Login Container -------------------------->
        @* <link rel="stylesheet" href="assets/loginpage/login.css"> *@
        <div class="row border rounded-5 p-3 bg-white shadow box-area">
            <!--------------------------- Left Box ----------------------------->
            <div class="col-md-6 rounded-4 d-flex justify-content-center align-items-center flex-column left-box" style="background: #ffffff;">
                <div class="featured-image mb-3">
                    <img src="@Url.Content("~/" + "./css/LoginIMG.jpg")" class="img-fluid rounded w-100" style="width: 350px;">
                </div>
                <!--<p class="text-white fs-2" style="font-family: 'Courier New', Courier, monospace; font-weight: 600;">Be Verified</p>
                <small class="text-white text-wrap text-center" style="width: 17rem;font-family: 'Courier New', Courier, monospace;">Join experienced Designers on this platform.</small>-->
            </div>
            <!-------------------- ------ Right Box ---------------------------->
            <div class="col-md-6 right-box border-start">
                <div class="row align-items-center">
                    <div class="header-text mb-4 text-center">
                        <h2>Chào mừng!</h2>
                    </div>
                    @using (Html.BeginForm("Login", "Access", FormMethod.Post))
                    {
                        <div class="input-group mb-3">
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control form-control-lg bg-light fs-6 mb-1", placeholder = "Tài khoản", required = "required", autofocus = "autofocus" })
                            @* <input type="text" class="form-control form-control-lg bg-light fs-6 mb-1" placeholder="Tài khoản"> *@
                        </div>
                        <div class="input-group mb-1">
                            @Html.TextBoxFor(x => x.Matkhau, new { @class = "form-control form-control-lg bg-light fs-6 mb-1", placeholder = "Mật khẩu", required = "required", autofocus = "autofocus" })
                            @* <input type="password" class="form-control form-control-lg bg-light fs-6 mb-3" placeholder="Mật khẩu"> *@
                        </div>
                        <div class="input-group mb-4 d-flex justify-content-between">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="formCheck">
                                <label for="formCheck" class="form-check-label text-secondary"><small>Ghi nhớ tài khoản</small></label>
                            </div>
                            <div class="forgot">
                                <small><a href="#">Quên mật khẩu?</a></small>
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <button type="submit" class="btn btn-lg btn-primary w-100 fs-6 rounded-2">Đăng nhập</button>

                        </div>
                    }
                    <div class="row">
                        <small>Không có tài khoản? > Đăng ký ngay</a></small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>


