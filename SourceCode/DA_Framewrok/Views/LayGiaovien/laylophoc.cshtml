
@{
    ViewData["Title"] = "laylophoc";
    Layout = "~/Views/Shared/LayoutTeacher.cshtml";
}
@model IEnumerable<DA_Framewrok.Models.Lophoc>
<div class="container py-3">
    <div class="row">
        <div class="col-12 py-3">
            <div class="section-title">
                <h1 class="display-4 fw-semibold text-center" style="color:white; padding-top: 30px;">
                    Khóa học đang dạy
                </h1>
            </div>
        </div>
        <div class="col-12">
            <div class="bg-light rounded p-2">
                <ul class="nav nav-tabs">
                    <li class="nav-item ">
                        <a class="nav-link active" data-bs-toggle="tab" href="#all">Đang dạy</a>
                    </li>
                </ul>
                <div class="row">
                    <div class="col-12">
                        <div class="row">
                            @foreach(var item in Model){
                                <div class="col-lg-3 col-md-6 col-sm-10 my-4">
                                    <div class="card">
                                        <img src="assets/images/book-composition-with-open-book.jpg" alt="">
                                        <div class="card-body">
                                            <h3 class="card-title">@item.MakhoahocNavigation.Tenkhoahoc</h3>
                                            <h5 class="card-title">@item.Tenlophoc</h5>
                                            <p class="card-text">
                                                Cải thiện toàn bộ các kĩ năng, củng cố nền tảng
                                                ngữ pháp và <br> trau dồi từ vựng, bước đầu làm quen với phát âm.
                                            </p>
                                            <a asp-action="Chitietlop" asp-route-malophoc="@item.Malophoc" class="btn btn-outline-primary">Thông tin chi tiết</a>
                                            

                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

