
@{
    ViewData["Title"] = "Schedule";
    Layout = "~/Views/Shared/LayoutStudent.cshtml";
}

<h1>Schedule</h1>

@model GetscheduleViewModel



<div class="container">
    <h2 class="text-center mt-3"></h2>
    <div class="container py-5">
        <div class="row">
            <div class="col-12 py-3">
                <div class="section-title">
                    <h1 class="display-4 fw-semibold text-center"
                        style="color:#4e57d4; padding-top: 100px;">
                        Thời khóa biểu
                    </h1>
                    <div class="line"></div>
                </div>

            </div>
            <div class="col-12 ">
                <div class="bg-white rounded p-2">
                    <ul class="nav nav-tabs">
                        <li class="nav-item ">
                            <a class="nav-link active" data-bs-toggle="tab" href="#all">Thời khóa biểu</a>

                        </li>
                    </ul>
                    <div class="row">
                        <div class="col-12">
                            <div class="tab-content p-4 ">
                                <div id="all" class="tab-pane fade in active show">
                                    <div class="row table-responsive">
                                        @foreach (var hocvienlop in Model.hocvienthuoclophocs)
                                        {
                                            <h3>Khóa học: @hocvienlop.MakhoahocNavigation.Tenkhoahoc</h3>
                                            <h4>Lớp học: @hocvienlop.MalophocNavigation.Tenlophoc</h4>
                                            <table class="table table-bordered mt-3">
                                                <thead>
                                                    <tr class="table-warning">
                                                        <th></th>
                                                        <th>Thời gian bắt đầu</th>
                                                        <th>Thời gian kết thúc</th>
                                                        <!-- Add more columns as needed -->
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var lichhoc in Model.ClassSchedule.Where(x => x.Malophoc == hocvienlop.Malophoc))
                                                    {
                                                        <tr>
                                                            <td>@lichhoc.Thu</td>
                                                            <td>@lichhoc.Giobatdau</td>
                                                            <td>@lichhoc.Gioketthuc</td>

                                                            <!-- Add more columns as needed -->
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
   
</div>
