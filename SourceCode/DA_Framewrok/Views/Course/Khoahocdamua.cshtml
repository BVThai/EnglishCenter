
@{
    ViewData["Title"] = "Khoahocdamua";
    Layout = "~/Views/Shared/LayoutStudent.cshtml";
}
@model IEnumerable<DA_Framewrok.Models.Hocvienthuoclophoc>
<div class="container py-5">
    <div class="row">
        <div class="col-12 py-3">
            <div class="section-title">
                <h1 class="display-4 fw-semibold text-center"
                    style="color:#4e57d4; padding-top: 100px;">
                    Khóa học đã mua
                </h1>
                <div class="line"></div>
            </div>
        </div>
        <div class="col-12 ">
            <div class="bg-white rounded p-2">
                <ul class="nav nav-tabs">
                    <li class="nav-item ">
                        <a class="nav-link active" data-bs-toggle="tab" href="#all">Đang học</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="tab" href="#latest">Đã hoàn thành</a>
                    </li>
                </ul>
                <div class="row">
                    <div class="col-12">
                        <div class="tab-content p-4 ">
                            <div id="all" class="tab-pane fade in active show">
                                <div class="row">
                                    @foreach (var item in Model){
                                        if (@item.MalophocNavigation.Tinhtranglophoc == "Da bat dau" || @item.MalophocNavigation.Tinhtranglophoc == "Chua bat dau")
                                        {
                                            <div class="col-lg-3 col-md-6 col-sm-10 my-4">
                                                <div class="card">
                                                    <img style="height: 216px"  src="@Url.Content("~/" + item.MakhoahocNavigation.Anhkhoahoc)" alt="">
                                                    <div class="card-body">
                                                        <h3 class="card-title">@item.MakhoahocNavigation.Tenkhoahoc </h3>
                                                        <h5 class="card-title">@item.MalophocNavigation.Tenlophoc</h5>

                                                        <p class="card-text">
                                                            Cải thiện toàn bộ các kĩ năng, củng cố nền tảng
                                                            ngữ pháp và <br> trau dồi từ vựng, bước đầu làm quen với phát âm.
                                                        </p>
                                                        <a style="width: 192.2px" asp-controller="Course" asp-action="XemThongBao" asp-route-malophoc="@item.Malophoc" class="btn btn-outline-success card-text">Xem thông báo</a>
                                                        <a style="margin-top: 10px" asp-controller="Hoconline" asp-action="ThamGiaBuoiHoc" asp-route-malophoc="@item.Malophoc" class="btn btn-outline-success">Tham gia buổi học</a>

                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                            <div id="latest" class="tab-pane fade ">
                                <div class="row">
                                    @foreach (var item in Model){
                                        if (item.MalophocNavigation.Tinhtranglophoc == "Da ket thuc")
                                        {
                                            <div class="col-lg-3 col-md-6 col-sm-10 my-4">
                                                <div class="card">
                                                    <img style="height: 216px" src="@Url.Content("~/" + item.MakhoahocNavigation.Anhkhoahoc)" alt="">
                                                    <div class="card-body">
                                                        <h3 class="card-title">@item.MakhoahocNavigation.Tenkhoahoc </h3>
                                                        <h5 class="card-title">@item.MalophocNavigation.Tenlophoc</h5>

                                                        <p class="card-text">
                                                            Cải thiện toàn bộ các kĩ năng, củng cố nền tảng
                                                            ngữ pháp và <br> trau dồi từ vựng, bước đầu làm quen với phát âm.
                                                        </p>
                                                        <a  asp-controller="Course" asp-action="XemThongBao" asp-route-malophoc="@item.Malophoc" class="btn btn-outline-success card-text">Xem thông báo</a>
                                                        <a style="margin-top: 10px; width: 167px;" class="btn btn-outline-success card-text">Hoàn thành</a>


                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

