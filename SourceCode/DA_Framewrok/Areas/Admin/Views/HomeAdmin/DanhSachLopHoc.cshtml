@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<DA_Framewrok.Models.Lophoc>

@{
    ViewData["Title"] = "DanhSachLopHoc";
    Layout = "~/Areas/Admin/Views/Share/_LayoutAdmin.cshtml";
}

<h1>Danh sách lớp học</h1>

@if (TempData["SuccessUpdateMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessUpdateMessage"]
    </div>
}
@if (TempData["SuccessDeleteMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessDeleteMessage"]
    </div>
}
<div class="table-responsive">
    <table class="table">
    <thead>
            <tr class="table-danger">
            <th>
               Tên khóa học
            </th>
            <th>
                Giáo viên phụ trách
            </th>
            <th>
                Tên lớp học
            </th>
            <th>
                Thời gian bắt đầu
            </th>
            <th>
                Thời gian kết thúc
            </th>
            <th>
                Tình trạng lớp học
            </th>
            <th>
                Sĩ số
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table-primary">
            <td>
                @Html.DisplayFor(modelItem => item.MakhoahocNavigation.Tenkhoahoc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MagiaovienNavigation.Tengiaovien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tenlophoc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Thoigianbatdau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Thoigianketthuc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tinhtranglophoc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Siso)
            </td>
            <td>
                <a asp-action="SuaLopHoc" asp-route-malophoc="@item.Malophoc">Edit</a> |
               
                <a asp-action="XoaLopHoc" asp-route-malophoc="@item.Malophoc">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>