@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<DA_Framewrok.Models.Thanhtoan>

@{
    ViewData["Title"] = "DanhSachChiTietKhoa";
    Layout = "~/Areas/Admin/Views/Share/_LayoutAdmin.cshtml";
}

<h1>Danh sách hóa đơn</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr class="table-danger">
            <th>
                Tên khách hàng
            </th>
            <th>
                Tên khóa học
            </th>
            <th>
                Tên lớp học
            </th>
            <th>
              Thời gian thanh toán
            </th>
            <th>
                Tổng tiền
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr class="table-primary">
            <td>
                @Html.DisplayFor(modelItem => item.MahocvienNavigation.Tenhocvien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MakhoahocNavigation.Tenkhoahoc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MalophocNavigation.Tenlophoc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Thoigianthanhtoan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tongtienthanhtoan)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Mathanhtoan">Edit</a> |
          
                <a asp-action="Delete" asp-route-id="@item.Mathanhtoan">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
