@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model DA_Framewrok.Models.Lophoc

@{
    ViewData["Title"] = "ThemLopHoc";
    Layout = "~/Areas/Admin/Views/Share/_LayoutAdmin.cshtml";
}

<h1>Lớp học</h1>

<h4>Thêm lớp học</h4>
<hr />
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="ThemLopHoc">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Tenlophoc" class="control-label"></label>
                <input asp-for="Tenlophoc" class="form-control" />
                <span asp-validation-for="Tenlophoc" class="text-danger"></span>
            </div>
            <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
            <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
            <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

            <!-- Include Flatpickr -->
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr@4.6.3/dist/flatpickr.min.css" />
            <script src="https://cdn.jsdelivr.net/npm/flatpickr@4.6.3/dist/flatpickr.min.js"></script>

            <div class="form-group">
                <label asp-for="Thoigianbatdau" class="control-label"></label>
                <input asp-for="Thoigianbatdau" class="form-control" id="datepicker" />
                <span asp-validation-for="Thoigianbatdau" class="text-danger"></span>
            </div>

            <script>
                $(document).ready(function () {
                    flatpickr("#datepicker", {
                        dateFormat: "Y-m-d",
                        minDate: "today",
                        onChange: function (selectedDates, dateStr, instance) {
                            $("#datepicker").val(dateStr);
                        }
                    });
                });
            </script>
            <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
            <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
            <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

            <!-- Include Flatpickr -->
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr@4.6.3/dist/flatpickr.min.css" />
            <script src="https://cdn.jsdelivr.net/npm/flatpickr@4.6.3/dist/flatpickr.min.js"></script>

            <div class="form-group">
                <label asp-for="Thoigianketthuc" class="control-label"></label>
                <input asp-for="Thoigianketthuc" class="form-control" id="datepicker1" />
                <span asp-validation-for="Thoigianketthuc" class="text-danger"></span>
            </div>

            <script>
                $(document).ready(function () {
                    flatpickr("#datepicker1", {
                        dateFormat: "Y-m-d",
                        minDate: "today",
                        onChange: function (selectedDates, dateStr, instance) {
                            $("#datepicker1").val(dateStr);
                        }
                    });
                });
            </script>
            <div class="form-group">
                <label asp-for="Magiaovien" class="control-label"></label>
                <select asp-for="Magiaovien" class ="form-control" asp-items="ViewBag.Magiaovien"></select>
            </div>
            <div class="form-group">
                <label asp-for="Makhoahoc" class="control-label"></label>
                <select asp-for="Makhoahoc" class ="form-control" asp-items="ViewBag.Makhoahoc"></select>
            </div>
            
            <div class="form-group">
                <label asp-for="Siso" class="control-label"></label>
                <input asp-for="Siso" class="form-control" />
                <span asp-validation-for="Siso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@{
    List<SelectListItem> GetTinhTrangLopItems()
    {
        return new List<SelectListItem>
        {
            new SelectListItem { Value = "Full", Text = "Full" },
            new SelectListItem { Value = "", Text = "Hide" }
        };
    }
}


