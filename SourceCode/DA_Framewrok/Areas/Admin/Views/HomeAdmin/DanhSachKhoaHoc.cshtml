@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<DA_Framewrok.Models.Khoahoc>

@{
    ViewData["Title"] = "DanhSachKhoaHoc";
    Layout = "~/Areas/Admin/Views/Share/_LayoutAdmin.cshtml";
}

<h1>DanhSachKhoaHoc</h1>

@if (TempData["SuccessUpdateMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessUpdateMessage"]
    </div>
}
@if (TempData["SuccessDeleteMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessDeleteMessage"]
    </div>
}
<div class="table-responsive">
    <table class="table table-bordered">
    <thead>
        <tr class="table-danger">
            <th>
               Tên khóa học
            </th>
            <th>
                Giá khóa học
            </th>
            <th>
                Mô tả
            </th>
            <th>
                Thời lượng
            </th>
            <th>
               Trạng thái
            </th>
            <th>
               Ảnh
            </th>
            <th>
                Loại khóa học
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table-primary">
            <td>
                @Html.DisplayFor(modelItem => item.Tenkhoahoc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Giakhoahoc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Thoiluong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trangthai)
            </td>
            <td>
                    <img src="~/@item.Anhkhoahoc" style="height: auto !important; width:100px !important ; border-radius:0px !important" alt="Teacher Image" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Loaikhoahoc)
            </td>
            <td>
                <a asp-action="SuaKhoaHoc" asp-route-makhoahoc="@item.Makhoahoc">Edit</a> |
             
                <a asp-action="XoaKhoaHoc" asp-route-makhoahoc="@item.Makhoahoc">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
