@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model DA_Framewrok.Models.Quantrivien

@{
    ViewData["Title"] = "SuaQuanTriVien";
    Layout = "~/Areas/Admin/Views/Share/_LayoutAdmin.cshtml";
}

<h1>Quản trị viên</h1>

<h4>Chỉnh sửa quản trị viên</h4>
