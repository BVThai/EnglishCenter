@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model DA_Framewrok.Models.Hocvien

@{
    ViewData["Title"] = "SuaHocVien";
    Layout = "~/Areas/Admin/Views/Share/_LayoutAdmin.cshtml";
}

<h1>Học viên</h1>

<h4>Sửa học viên</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="SuaHocVien">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Mahocvien" />
            <div class="form-group">
                <label asp-for="Tenhocvien" class="control-label"></label>
                <input asp-for="Tenhocvien" class="form-control" />
                <span asp-validation-for="Tenhocvien" class="text-danger"></span>
            </div>
            <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
            <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
            <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

            <!-- Include Flatpickr -->
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr@4.6.3/dist/flatpickr.min.css" />
            <script src="https://cdn.jsdelivr.net/npm/flatpickr@4.6.3/dist/flatpickr.min.js"></script>

            <div class="form-group">
                <label asp-for="Ngaysinh" class="control-label"></label>
                <input asp-for="Ngaysinh" class="form-control" id="datepicker" />
                <span asp-validation-for="Ngaysinh" class="text-danger"></span>
            </div>

            <script>
                $(document).ready(function () {
                    flatpickr("#datepicker", {
                        dateFormat: "Y-m-d",

                        onChange: function (selectedDates, dateStr, instance) {
                            $("#datepicker").val(dateStr);
                        }
                    });
                });
            </script>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sodienthoai" class="control-label"></label>
                <input asp-for="Sodienthoai" class="form-control" />
                <span asp-validation-for="Sodienthoai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Matkhau" class="control-label"></label>
                <input asp-for="Matkhau" class="form-control" />
                <span asp-validation-for="Matkhau" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tinhtrang" class="control-label"></label>
                <select asp-for="Tinhtrang" asp-items="GetTinhtrangItems()" class="form-control"></select>
                <span asp-validation-for="Tinhtrang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@{
    List<SelectListItem> GetTinhtrangItems()
    {
        return new List<SelectListItem>
        {
            new SelectListItem { Value = "Active", Text = "Active" },
            new SelectListItem { Value = "Inactive", Text = "Inactive" }
        };
    }
}
